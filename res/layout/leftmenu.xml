<?xml version="1.0" encoding="utf-8"?>   
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="fill_parent"   
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"> 
      
    <ImageView 
            android:id="@+id/left_menu_bg"
            android:layout_width="80dp"
            android:layout_height="290dp"
            android:background="#d7ebff"
            android:contentDescription="@string/img_description"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        
       
        <Button android:id="@+id/jrpz"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/jrpz_selector"/>
            
        <Button android:id="@+id/xytb"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/xytb_selector"/>
    
        <Button android:id="@+id/stfc"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/stfc_selector"/> 
    
        <Button android:id="@+id/xszz"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/xszz_selector"/> 
    
        <Button android:id="@+id/pcbx"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:background="@drawable/pcbx_selector"/>
        
    </LinearLayout>
    
     

</RelativeLayout>